{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "baseUrl": ".",
        "declaration": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "preserve",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "lib": ["dom", "es6", "ES2020.String", "ES2019"],
        "module": "CommonJS",
        "outDir": "out",
        "removeComments": false,
        "rootDir": ".",
        // Set to true to handle some issues with fabric ui
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "useDefineForClassFields": true
    },
    "include": ["src", "tests", "vite.env.d.ts", "index.ts"]
}
